<%= nested_form_for @study_course, :html => { :class => "form-horizontal study_course" } do |f| %>

  <% if @study_course.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@study_course.errors.count, "error") %> prohibited this study_course from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @study_course.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :student_id , :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :student_id , value: (@study_course.student_id || params[:student_id]), readonly: true, :class => 'form-control' %>
    </div>
    <%=f.error_span(:student_id) %>
  </div>
  <div class="form-group">
    <%= f.label :student_name , :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= text_field_tag :student_name , (@study_course.student.try(:name) || params[:student_name]), readonly: true, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :teacher_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.collection_select :teacher_id, Teacher.all, :id, :name, {}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:teacher_id) %>
  </div>

  <div class="form-group">
    <%= f.label :course_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.collection_select :course_id, Course.all, :id, :name_level, {}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:course_id) %>
  </div>
  <div class="form-group">
    <%= f.label :start_at , :class => 'control-label col-lg-2' %>
    <div class="col-lg-2">
      <%= f.text_field :start_at , :class => 'form-control datepicker' %>
    </div>
    <%=f.error_span(:start_at) %>
  </div>

  <div class="form-group">
    <label class="col-lg-2 control-label"><%= t ".list_manage_app" %></label>
    <div class="center col-lg-10">
      <%= f.fields_for :study_date_per_weeks do |ff| %>
        <div class="form-group">
          <%= f.label :study_at_day , :class => 'control-label col-lg-2' %>
          <div class="col-lg-2">
            <%= ff.select :study_at_day, day_in_week, {}, {class: "form-control"} %>
          </div>
          <%= f.label :time_study , :class => 'control-label col-lg-2' %>
          <div class="col-lg-2">
            <%= ff.text_field :time_study, placeholder: "18:30" , class: "form-control col-lg-2" %>
          </div>
          <div class="col-md-12" style="height:10px;"></div>
       </div>
      <% end %>
      <p><%= f.link_to_add "add study schedule", :study_date_per_weeks, class: "btn btn-success" %></p>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                study_courses_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
